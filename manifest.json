{
    "manifest_version": 3,
    "name": "Crashout Stewie",
    "version": "1.0.0",
    "description": "Stewie Griffin (the loveable baby from Family Guy) crashes out whenever you make a mistake",
    "permissions": ["activeTab"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["reactions.js", "detectors.js", "content.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["images/*.png"],
            "matches": ["<all_urls>"]
        }
    ],
    "icons": {
        "16": "icon48.png",
        "48": "icon48.png",
        "128": "icon48.png"
    }
}